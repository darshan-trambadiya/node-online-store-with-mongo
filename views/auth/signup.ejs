<%- include('../includes/head.ejs') %>

    <%- include('../includes/breadcrumbs.ejs', {currentPage: {title: 'Sign Up' , url: '/signup' } }) %>

        <!-- Shop Login -->
        <section class="shop login section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 offset-lg-3 col-12">
                        <div class="login-form">
                            <h2>Sign Up</h2>
                            <p>Please sign up to access additional features on this website.</p>

                            <% if (errorMessage) { %>
                                <div id="flashMessage" class="row alert alert-danger" role="alert">
                                    <%= errorMessage %>
                                </div>
                                <script src="/js/hide-flash-message.js"></script>
                                <% } %>

                                    <!-- Form -->
                                    <form class="form" method="post" action="/signup" novalidate>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label>Your Email<span>*</span></label>
                                                    <input id="email"
                                                        class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                                                        type="email" name="email" placeholder=""
                                                        value="<%= oldInput.email %>">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label>Your Password<span>*</span></label>
                                                    <input id="password"
                                                        class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                                                        type="password" name="password" placeholder=""
                                                        value="<%= oldInput.password %>">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label>Confirm Password<span>*</span></label>
                                                    <input id="confirmPassword"
                                                        class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                                                        type="password" name="confirmPassword" placeholder=""
                                                        value="<%= oldInput.confirmPassword %>">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group login-btn">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <button class="btn" type="submit">Sign Up</button>
                                                    <a href="/login" class="btn">Login</a>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <!--/ End Form -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--/ End Login -->

        <%- include('../includes/end.ejs') %>